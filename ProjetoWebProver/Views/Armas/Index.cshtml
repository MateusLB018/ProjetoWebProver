@model IEnumerable<ProjetoWebProver.Models.Arma>

@{
    ViewData["Title"] = "Armas";
}

<h1>Armas</h1>

<p>
    <a asp-action="Create">Criar Nova Arma</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qual)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personagem.ItemIni)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-area="" asp-controller="Home" asp-action="InicioLog">Voltar</a>
</div>
<style>
    .a{
        color:red;
    }
</style>