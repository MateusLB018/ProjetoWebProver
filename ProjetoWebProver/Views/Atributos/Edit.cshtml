@model ProjetoWebProver.Models.Atributo

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Atributo</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonagemId" class="control-label"></label>
                <select asp-for="PersonagemId" class="form-control" asp-items="ViewBag.PersonagemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Inteligencia" class="control-label"></label>
                <input asp-for="Inteligencia" class="form-control" />
                <span asp-validation-for="Inteligencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Força" class="control-label"></label>
                <input asp-for="Força" class="form-control" />
                <span asp-validation-for="Força" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fe" class="control-label"></label>
                <input asp-for="Fe" class="form-control" />
                <span asp-validation-for="Fe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vitalidade" class="control-label"></label>
                <input asp-for="Vitalidade" class="form-control" />
                <span asp-validation-for="Vitalidade" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Energia" class="control-label"></label>
                <input asp-for="Energia" class="form-control" />
                <span asp-validation-for="Energia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magia" class="control-label"></label>
                <input asp-for="Magia" class="form-control" />
                <span asp-validation-for="Magia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Defesa" class="control-label"></label>
                <input asp-for="Defesa" class="form-control" />
                <span asp-validation-for="Defesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vigor" class="control-label"></label>
                <input asp-for="Vigor" class="form-control" />
                <span asp-validation-for="Vigor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a asp-action="Index">Voltar</a>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-control {
        background-color: rgba(12,12,12,0.1);
        color: red;
    }
</style>