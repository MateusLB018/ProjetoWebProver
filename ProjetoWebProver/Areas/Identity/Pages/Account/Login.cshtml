@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}



<div class="text-center2" id="teste">
    <h1 class="display-1">Lembra de quem você é?</h1>
    
    
</div>





@*<h1>@ViewData["Title"]</h1>*@
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                @*<h4>Use sua conta para entrar</h4>*@
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group" id="btnc-EntrarLog">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar-se</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

<style>
    .form-control {
        background-color: rgba(12,12,12,0.1);
        
    }
</style>